      <script>
        let lenOfWords = "<%-words_len%>";
        let wordArray = `<%-data%>`;
        let arr = wordArray.split(",");
        const word_list = document.querySelector(".word-container");
        console.log(arr);
        window.onload = function () {
          for (let i = 0; i < lenOfWords; i++) {
            const temp = document.createElement("div");
            temp.className = "single-word-container";
            temp.innerHTML = `<p class="delete-btn">x</p><p class="word">${arr[i]}</p>`;
            console.log(wordArray);
            word_list.append(temp);
          }
          setTimeout(function () {
            word_list.style.opacity = "100%";
          }, 1000);
        };

        window.addEventListener("click", (e) => {
          if (e.target.classList[0] == "delete-btn") {
            let parent = e.target.parentNode;
            parent.style.opacity = "0%";
            setTimeout(function () {
              parent.remove();
            }, 300);
